{
    "compilerOptions": {
      "outDir": "./build/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es2018",
      "jsx": "react",
      "strictNullChecks": true,
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    },
    "exclude" : [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
  }